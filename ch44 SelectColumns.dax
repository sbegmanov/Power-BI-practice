DEFINE
var customers = ADDCOLUMNS(DimCustomer, "Rand", RAND())
var one_Customer = TOPN(1, customers, [Rand], DESC)
EVALUATE
one_Customer

DEFINE
var customers = 
	SELECTCOLUMNS(
			DimCustomer, 
			"DimCustomer", [CustomerKey], 
			"Rand", RAND()
			)
var one_Customer = TOPN(1, customers, [Rand], DESC )
EVALUATE
one_Customer